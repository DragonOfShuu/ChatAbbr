{
    "version": "0.1.0",
    "manifest_version": 3,
    "name": "Paradigm",
    "description": "Create templates/hotkeys for expanding common phrases",
    "action": {
        "default_popup": "js/popup.html",
        "default_title": "Paradigm"
    },
    "icons": {
        "16": "icons/16-logo.png",
        "32": "icons/32-logo.png",
        "48": "icons/48-logo.png",
        "128": "icons/128-logo.png"
    },
    "content_scripts": [
        {
            "js": ["js/content.bundle.js"],
            "matches": [
            "*://*/*"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}
