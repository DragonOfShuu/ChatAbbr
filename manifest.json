{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "ChatAbbr",
    "description": "Allows you to type abbreviations for full sentences!",
    "action": {
        "default_popup": "js/popup.html",
        "default_title": "ChatAbbr"
    },
    "content_scripts": [
        {
          "js": ["js/content.js"],
          "matches": [
            "*://*/*"
          ]
        }
    ]
}